{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Unit pytest",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "--maxfail=3",
                "--disable-warnings",
                "tests/unit",
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Integration pytest",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "--maxfail=3",
                "--disable-warnings",
                "tests/integration",
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: This pytest",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "--maxfail=3",
                "--disable-warnings",
                "${file}"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}